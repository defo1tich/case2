class Альбом:
    def __init__(self, название, год, жанры):
        self.название = название
        self.год = год
        self.жанры = жанры
        self.популярный_трек = ""
    
    def описание(self):
        print(f"\nАльбом: {self.название} ({self.год})")
        print(f"Жанры: {', '.join(self.жанры)}")
        if self.популярный_трек:
            print(f"Самый популярный трек: '{self.популярный_трек}'")


class АльбомRadiohead(Альбом):
    
    def __init__(self, название, год, жанры, экспериментальный=False):
        super().__init__(название, год, жанры)
        self.экспериментальный = экспериментальный
        self.группа = "Radiohead"
    
    def описание(self):
        super().описание()
        if self.экспериментальный:
            print("Особенность: Экспериментальный звук")
        print(f"Исполнитель: {self.группа}")


class АльбомDeftones(Альбом):
    def __init__(self, название, год, жанры, уровень_тяжести=5):
        super().__init__(название, год, жанры)
        self.уровень_тяжести = уровень_тяжести
        self.группа = "Deftones"
    
    def описание(self):
        super().описание()
        print(f"Уровень тяжести: {self.уровень_тяжести}/10")
        print(f"Исполнитель: {self.группа}")

ok_computer = АльбомRadiohead(
    "OK Computer", 
    1997, 
    ["Альтернативный рок", "Арт-рок"],
    экспериментальный=True
)
ok_computer.популярный_трек = "Paranoid Android"

white_pony = АльбомDeftones(
    "White Pony", 
    2000, 
    ["Альтернативный метал", "Ню-метал"],
    уровень_тяжести=7
)
white_pony.популярный_трек = "Change (In the House of Flies)"

in_rainbows = АльбомRadiohead(
    "In Rainbows", 
    2007, 
    ["Альтернативный рок", "Экспериментальный рок"]
)
in_rainbows.популярный_трек = "Reckoner"

print("="*60)
print("МУЗЫКАЛЬНАЯ АЛЬБОМОГРАФИЯ".center(60))
print("="*60)

ok_computer.описание()

print("\n" + "-"*60)

white_pony.описание()

print("\n" + "-"*60)

in_rainbows.описание()
